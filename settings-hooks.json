{
  "_comment": "Ecosystem settings template. Merged into ~/.claude/settings.json by install script. Secrets (env, enabledPlugins) are NOT stored here â€” they stay machine-local.",
  "permissions": {
    "allow": [
      "Bash(*)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)",
      "Bash(mkfs *)",
      "Bash(dd *)",
      "Bash(git push --force *)",
      "Bash(git reset --hard *)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "tool_input.file_path matches '\\.(ts|tsx|js|jsx)$'",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/warn-console-log-on-edit.js\""
          },
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/ecosystem-reminder.js\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "tool == 'Bash' && tool_input.command matches 'git push'",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"process.stdout.write('Reminder: run /audit and /close gates before push')\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/check-console-log.js\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$HOME/.claude/hooks/pre-compact-save.js\""
          }
        ]
      }
    ]
  }
}
