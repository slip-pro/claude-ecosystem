{
  "_comment": "Template for ~/.claude/settings.json. Install script replaces {HOOKS_DIR} with actual path and merges into existing settings.",
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git rm:*)",
      "Bash(git ls-tree:*)",
      "Bash(git remote add:*)",
      "Bash(git init:*)",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(npm update:*)",
      "Bash(npm ls:*)",
      "Bash(npm pkg set:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(ls:*)",
      "Bash(dir:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(findstr:*)",
      "Bash(sort:*)",
      "Bash(wc:*)",
      "Bash(test:*)",
      "Bash(curl:*)",
      "Bash(ping:*)",
      "Bash(ssh:*)",
      "Bash(scp:*)",
      "Bash(docker ps:*)",
      "Bash(docker run:*)",
      "Bash(docker exec:*)",
      "Bash(docker-compose up:*)",
      "Bash(powershell:*)",
      "Bash(where:*)",
      "Bash(netstat:*)",
      "Bash(pushd:*)",
      "Bash(popd:*)",
      "Bash(ln:*)",
      "Bash(taskkill:*)",
      "Bash(wmic:*)",
      "Bash(timeout:*)",
      "Bash(winget install:*)",
      "Bash(gh auth:*)",
      "Bash(gh repo create:*)",
      "Bash(python -c:*)",
      "Bash(python3:*)",
      "Bash(psql:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "tool_input.file_path matches '\\.(ts|tsx|js|jsx)$'",
        "hooks": [
          {
            "type": "command",
            "command": "node \"{HOOKS_DIR}/warn-console-log-on-edit.js\""
          },
          {
            "type": "command",
            "command": "node \"{HOOKS_DIR}/ecosystem-reminder.js\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "tool == 'Bash' && tool_input.command matches 'git push'",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"process.stdout.write('Reminder: run /audit and /close gates before push')\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"{HOOKS_DIR}/check-console-log.js\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"{HOOKS_DIR}/pre-compact-save.js\""
          }
        ]
      }
    ]
  }
}
